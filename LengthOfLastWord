#include <iostream>
#include <string>
using namespace std;

int main() {
  	//char str[30];
    string str;
	cout<<"Enter the string:";
	getline(cin, str);
    int init_val;
    for(int i=0;str[i]!='\0';++i)
    {
    	if(str[i] == ' ')
        {
        	init_val = 0;
        }
        else
        {
        	init_val = init_val + 1;
        }
        
    }
    cout<<"Length of last word in String: "<<init_val<<endl;
  return 0;
}
